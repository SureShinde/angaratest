	  </ship_mysql4>
	</models>
	<resources>
	  <ship_setup>
		<setup>
		  <module>Angara_Ship</module>
		</setup>
		<connection>
		  <use>core_setup</use>
		</connection>
	  </ship_setup>
	  <ship_write>
		<connection>
		  <use>core_write</use>
		</connection>
	  </ship_write>
	  <ship_read>
		<connection>
		  <use>core_read</use>
		</connection>
	  </ship_read>
	</resources>
  </global>
