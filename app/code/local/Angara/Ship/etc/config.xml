<?xml version="1.0"?>
<config>
  <modules>
    <Angara_Ship>
      <version>0.1.0</version>
    </Angara_Ship>
  </modules>
  <global>
    <helpers>
      <ship>
        <class>Angara_Ship_Helper</class>
      </ship>
