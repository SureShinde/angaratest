	<tabs>
        <productbase translate="label" module="productbase">
            <label>Angara Extensions</label>
            <sort_order>900</sort_order>
        </productbase>
    </tabs>
    <sections>
        <productbase translate="label" module="productbase">
            <label>Angara Productbase</label>
            <tab>productbase</tab>
            <frontend_type>text</frontend_type>
            <sort_order>100</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general translate="label">
                    <label>General settings</label>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
						<rhodiumcost>
                            <label>Rhodium Cost</label>
                            <comment>Fix rhodium cost in USD.</comment>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <frontend_input>text</frontend_input>
                        </rhodiumcost>
						<packingcost>
                            <label>Packing Cost</label>
                            <comment>Fix packing cost in USD.</comment>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <frontend_input>text</frontend_input>
                        </packingcost>
						<ringresizingcost>
                            <label>Ring Resizing Cost</label>
                            <comment>Fix resizing cost in USD(applies to rings only).</comment>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <frontend_input>text</frontend_input>
                        </ringresizingcost>
						<shippingcost>
                            <label>Shipping Cost</label>
                            <comment>Fix shipping cost in USD.</comment>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <frontend_input>text</frontend_input>
                        </shippingcost>
						
						
