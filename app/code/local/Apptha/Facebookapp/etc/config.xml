<?xml version="1.0"?>
<config>
    <modules>
        <Apptha_Facebookapp>
            <version>0.1.0</version>
        </Apptha_Facebookapp>
    </modules>
    <frontend>
        <routers>
            <facebookapp>
                <use>standard</use>
                <args>
                    <module>Apptha_Facebookapp</module>
                    <frontName>facebookapp</frontName>
                </args>
            </facebookapp>
        </routers>
        <layout>
            <updates>
                <facebookapp>
                    <file>facebookapp.xml</file>
                </facebookapp>
            </updates>
        </layout>
        <events>
            <controller_action_predispatch>
                <observers>
                    <facebookapp>
                        <type>singleton</type>
                        <class>Apptha_Facebookapp_Model_Observer</class>
                        <method>catalog_product_new_action</method>
                    </facebookapp>
                </observers>
            </controller_action_predispatch>
        </events>
    </frontend>
    <admin>
        <routers>
            <facebookapp>
                <use>admin</use>
                <args>
                    <module>Apptha_Facebookapp</module>
                    <frontName>facebookapp</frontName>
                </args>
            </facebookapp>
        </routers>
    </admin>
    <adminhtml>
        <menu>
            
        </menu>
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <Apptha_Facebookapp>
                            <title>Facebookapp Module</title>
                            <sort_order>10</sort_order>
                        </Apptha_Facebookapp>
                    </children>
                </admin>
            </resources>
        </acl>
        <layout>
            <updates>
                <facebookapp>
                    <file>facebookapp.xml</file>
                </facebookapp>
            </updates>
        </layout>
    </adminhtml>
    <global>
        <models>
            <facebookapp>
                <class>Apptha_Facebookapp_Model</class>
                <resourceModel>facebookapp_mysql4</resourceModel>
            </facebookapp>
            <facebookapp_mysql4>
                <class>Apptha_Facebookapp_Model_Mysql4</class>
                <entities>
                    <facebookapp>
                        <table>facebookapp</table>
                    </facebookapp>
                </entities>
            </facebookapp_mysql4>
             <paypal>
                    <rewrite>
                        <standard>Gclone_Facebookapp_Model_Standard</standard>
                    </rewrite>
                </paypal>
        </models>
        <events>
            <catalog_product_save_after>

                <observers>
                    <facebookapp>
                        <type>singleton</type>
                        <class>facebookapp/observer</class>
                        <method>catalog_product_save_after</method>
                    </facebookapp>
                </observers>
            </catalog_product_save_after>
            <checkout_submit_all_after>
                <observers>
                    <facebookapp>
                        <type>singleton</type>
                        <class>facebookapp/observer</class>
                        <method>checkout_type_onepage_save_order</method>
                    </facebookapp>
                </observers>
            </checkout_submit_all_after>
        </events>
        <resources>
            <facebookapp_setup>
                <setup>
                    <module>Apptha_Facebookapp</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </facebookapp_setup>
            <facebookapp_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </facebookapp_write>
            <facebookapp_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </facebookapp_read>
        </resources>
        <blocks>
            <facebookapp>
                <class>Apptha_Facebookapp_Block</class>
            </facebookapp>
        </blocks>
        <helpers>
            <facebookapp>
                <class>Apptha_Facebookapp_Helper</class>
            </facebookapp>
        </helpers>
    </global>
</config>