<?xml version="1.0"?>
<config>
    <tabs>
        <recentlyviewed translate="label" module="recentlyviewed">
            <label>Atwix Extensions</label>
            <sort_order>300</sort_order>
        </recentlyviewed>
    </tabs>
    <sections>
		<recentlyviewed translate="label" module="recentlyviewed">
			<label>Recently Viewed Items</label>
			<tab>recentlyviewed</tab>
			<frontend_type>text</frontend_type>
			<sort_order>99999</sort_order>
			<show_in_default>1</show_in_default>
			<show_in_website>1</show_in_website>
			<show_in_store>1</show_in_store>
			<groups>
            <general translate="label">
            <label>General</label>
            <sort_order>2</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <fields>
                <enablemodule translate="label">
                    <label>Enable Module</label>
                    <comment></comment>
                    <frontend_type>select</frontend_type>
                    <source_model>adminhtml/system_config_source_yesno</source_model>
                    <sort_order>20</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <can_be_empty>1</can_be_empty>
			    </enablemodule>
			    <itemscount translate="label">
			              <label>Items Count</label>
			              <frontend_type>text</frontend_type>
			              <sort_order>50</sort_order>
			              <show_in_default>1</show_in_default>
			              <show_in_website>1</show_in_website>
			              <show_in_store>1</show_in_store>
			    </itemscount>
                <enableextraspace translate="label">
                    <label>Add Footer Extra Space</label>
                    <comment></comment>
                    <frontend_type>select</frontend_type>
                    <source_model>adminhtml/system_config_source_yesno</source_model>
                    <sort_order>60</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <can_be_empty>1</can_be_empty>
			    </enableextraspace>
            </fields>
        </general>
        </groups>
	</recentlyviewed>
</sections>
</config>