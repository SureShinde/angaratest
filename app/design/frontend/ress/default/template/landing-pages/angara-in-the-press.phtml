<script>
	jQuery(function(){
		jQuery('.cheddar a').click(function(){
			var winheight = jQuery(window).height();
			var videoheight = jQuery('.video-popup div').height();
			var toppadding = (winheight-videoheight)/2;
			jQuery(".video-popup").removeClass('hidden').find('div').css({'padding-top': toppadding+'px'});
			jQuery('body').css({'overflow-y':'hidden'});
		});
		 jQuery('.video-popup').on('click', function(ev) {
			jQuery(this).addClass('hidden');
			jQuery('body').css({'overflow-y':'auto'});
			jQuery("#video")[0].src += "&autoplay=false";
			ev.preventDefault();
		  });
		 jQuery('.audio a').click(function(){
			var winheight = jQuery(window).height();
			var videoheight = jQuery('.audio-popup .ap-holder').height();
			var toppadding = (winheight-videoheight)/2;
			jQuery(".audio-popup").removeClass('hidden').find('.ap').css({'margin-top': toppadding+'px'});
			jQuery('body').css({'overflow-y':'hidden'});
			var player = document.getElementById('audio');
				player.play();

		});
		 jQuery('.audio-popup').on('click', function(ev) {
			if(ev.target.id != 'ap-holder'){
				jQuery(this).addClass('hidden');
				jQuery('body').css({'overflow-y':'auto'}); 
				
				var player = document.getElementById('audio');
					player.pause();
            }
		  });
	});
</script>