/**
 * Pager template
 *
 * @see Mage_Page_Block_Html_Pager
 */
?>
<?php if($this->getCollection()->getSize()): ?>
<?php if($this->getLastPageNum()>1): ?>
<div class="pages">
	<ol>
		<?php if (!$this->isFirstPage()): ?>
			<li class="pre" onclick="catalogPageChange('<?php echo $this->getCurrentPage() - 1;?>')"><a class="previous<?php if(!$this->getAnchorTextForPrevious()): ?> i-previous<?php endif;?>" href="<?php echo $this->getPreviousPageUrl() ?>" onclick="javascript:document.getElementById('anchortop').focus();" title="<?php echo $this->__('Previous') ?>">Previous</a></li>
		<?php else: ?>
			<li class="preDisable">Previous</li>
		<?php endif ?>
		<li class="pageno">Page <?php echo $this->getCurrentPage() ?> of <?php echo $this->getLastPageNum() ?></li>
        <?php if (!$this->isLastPage()): ?>
		<li class="next" onclick="catalogPageChange('<?php echo $this->getCurrentPage() + 1;?>')"><a class="next<?php if(!$this->getAnchorTextForNext()): ?> i-next<?php endif; ?>" href="<?php echo $this->getNextPageUrl() ?>" title="<?php echo $this->__('Next') ?>" onclick="javascript:document.getElementById('anchortop').focus();">Next</a></li>
		<?php else: ?>
		<li class="nextDisable">Next</li>
		<?php endif ?>
	</ol>
</div>
<?php endif ?>
<div class="sortby"> <!-- is closed in toolbar.phtml -->
<div class="relevance">
	<select onchange="setLocation(this.value);catalogItemsNumberChange(this.options[this.selectedIndex].text);" class="relevanceselect">
		<?php foreach ($this->getAvailableLimit() as  $_key=>$_limit): ?>
		<option value="<?php echo $this->getLimitUrl($_key) ?>"<?php if($this->isLimitCurrent($_key)): ?> selected="selected"<?php endif ?>>
			<?php echo $_limit ?> <?php echo $this->__('per page') ?>
		</option>
		<?php endforeach; ?>
	</select>
</div>
<?php endif;?>
<!-- end of pager.phtml -->