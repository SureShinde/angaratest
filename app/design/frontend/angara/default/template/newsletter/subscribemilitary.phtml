<script type="text/javascript">
jQuery.post('/newsletter/subscriber/msg/',showmsgnewsletter11);
function showmsgnewsletter11(data)
{
	arr = new Array();
	arr = data.split(':');
	if(arr[0] == '0')
	{
		document.getElementById(arr[1] + '-err').innerHTML=arr[2];
		document.getElementById(arr[1] + '-err').style.display = 'block';
		if(document.getElementById('div_news_popup') && (arr[1] == '04-Home-Pop-Up-Sign-Up' || arr[1] == '05-Home-Pop-Up-Sign-Up' || arr[1] == '06-Home-Pop-Up-Sign-Up'))
		{
			document.getElementById('div_news_popup').style.display = 'block';
		}
	}
	else if(arr[0] == '1')
	{
		document.getElementById(arr[1] + '-suc').innerHTML=arr[2];
		document.getElementById(arr[1] + '-suc').style.display = 'block';
		if(document.getElementById('div_news_popup') && (arr[1] == '04-Home-Pop-Up-Sign-Up' || arr[1] == '05-Home-Pop-Up-Sign-Up' || arr[1] == '06-Home-Pop-Up-Sign-Up'))
		{
			document.getElementById('div_news_popup').style.display = 'block';
		}
	}
}
function emailvalidate11() 
   {
     
     var reg = /^([A-Za-z0-9_\-\.])+\@([A-Za-z0-9_\-\.])+\.([A-Za-z]{2,4})$/;
     var address = document.getElementById("newsletter11").value;
     if(reg.test(address) == false) 
	 {
      document.getElementById("newsletter11").value = "Enter Your Email Address";
      document.getElementById("spnerror11").style.display="block";
      return false;
     }
	 document.getElementById("spnerror11").style.display="none";
}
