<?php if($this->getCollection()->getSize()): ?>
<div class="displayoption">
    <?php if( $this->isExpanded() ): ?>
    <?php echo $this->getPagerHtml() ?>
    <div class="sortbytxt">Sort&nbsp;By</div>
	<div class="relevance">
            <select onchange="setLocation_hp(this.value);catalogSortByChange(this.options[this.selectedIndex].text)" class="relevanceselectsrt">
            <?php foreach($this->getAvailableOrders() as $_key=>$_order): ?>
            	<?php if($_key=='price'): ?>
            	<option value="<?php echo $this->getCurrentOrderUrl($_key, 'asc') ?>"<?php if($this->isOrderCurrent($_key) && $this->getCurrentDirection() == 'asc'): ?>selected="selected"<?php endif; ?>>
                    <?php echo $this->__('Price: Low to High') ?>
                </option>
            	<option value="<?php echo $this->getCurrentOrderUrl($_key, 'desc') ?>"<?php if($this->isOrderCurrent($_key) && $this->getCurrentDirection() == 'desc'): ?>selected="selected"<?php endif; ?>>
                    <?php echo $this->__('Price: High to Low') ?>
                </option>
                <?php elseif($_key!='name'): ?>
					<?php if($_key=='position'): ?>
					<option value="<?php echo $this->getCurrentOrderUrl($_key, 'asc') ?>"<?php if($this->isOrderCurrent($_key)): ?> selected="selected"<?php endif; ?>>
						<?php echo $this->__('Most Popular') ?>
					</option>
					<?php else: ?><?php //echo $this->__($_order) ?><?php endif; ?>
                <?php endif;?>
            <?php endforeach; ?>
            	
            </select>
    </div>
    </div><!-- end of sortby div opened in pager.phtml -->
    <?php endif; ?>
</div>
