/**
 * Product list toolbar
 *
 * @see Mage_Catalog_Block_Product_List_Toolbar
 */

if($this->getCollection()->getSize()): ?>
	<div class="displayoption">
    <?php 
	if($this->isExpanded()): 	
		echo $this->getPagerHtml(); ?>
				
		<div class="relevance">
			<div class="sortbytxt">Sort&nbsp;By</div>
            
			<select onchange="setLocation_hp(this.value)" class="relevanceselectsrt">
            <?php 
			foreach($this->getAvailableOrders() as $_key=>$_order): 
				if($_key=='price'): ?>
					<option value="<?php echo $this->getCurrentOrderUrl($_key, 'asc') ?>"<?php if($this->isOrderCurrent($_key) && $this->getCurrentDirection() == 'asc'): ?>selected="selected"<?php endif; ?>>
						<?php echo $this->__('Price: Low to High') ?>
					</option>
					<option value="<?php echo $this->getCurrentOrderUrl($_key, 'desc') ?>"<?php if($this->isOrderCurrent($_key) && $this->getCurrentDirection() == 'desc'): ?>selected="selected"<?php endif; ?>>
						<?php echo $this->__('Price: High to Low') ?>
					</option>
					<?php 
				elseif($_key!='name'): ?>
					<option value="<?php echo $this->getCurrentOrderUrl($_key, 'asc') ?>"<?php if($this->isOrderCurrent($_key)): ?> selected="selected"<?php endif; ?>>
						<?php if($_key=='position'): ?><?php echo $this->__('Best Sellers') ?><?php else: ?><?php echo $this->__($_order) ?><?php endif; ?>
					</option>
                <?php
				endif;?>
            <?php 
			endforeach; ?>            	
            </select>
    	</div>    	
		<?php /*?></div><?php */?><!-- end of sortby div opened in pager.phtml -->
   	<?php 
	endif; ?>
		<div class="clear"></div>
	</div>
<?php 
endif; ?>

